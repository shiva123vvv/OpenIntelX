generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Search {
  id                  String   @id @default(uuid())
  searchType          String
  searchValue         String
  breachCount         Int
  githubExists        Boolean
  gravatarExists      Boolean
  riskScore           Int
  riskLevel           String
  rawData             Json?
  createdAt           DateTime @default(now())

  @@index([searchValue])
  @@index([createdAt])
}
